<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.blackout.blackoutmachine.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo"
        android:id="@+id/imageView"
        android:contentDescription="@string/fondo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="0.6"
        android:padding="80dp"
        android:id="@+id/buttonLayout"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                style="@style/MainGames"
                android:id="@+id/gameButton1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:src="@drawable/logoblackout"
                    android:contentDescription="@string/logo" />

                <TextView
                    style="@style/MainGameName"
                    android:id="@+id/game1" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/infojuego"
                    android:visibility="invisible"
                    android:id="@+id/info1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eliminarjuego"
                    android:visibility="invisible"
                    android:id="@+id/delete1"
                    android:onClick="deleteGame" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                style="@style/MainGames"
                android:id="@+id/gameButton2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:src="@drawable/logoblackout"
                    android:contentDescription="@string/logo" />

                <TextView
                    style="@style/MainGameName"
                    android:id="@+id/game2" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/infojuego"
                    android:visibility="invisible"
                    android:id="@+id/info2" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eliminarjuego"
                    android:visibility="invisible"
                    android:id="@+id/delete2"
                    android:onClick="deleteGame" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                style="@style/MainGames"
                android:id="@+id/gameButton3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:src="@drawable/logoblackout"
                    android:contentDescription="@string/logo" />

                <TextView
                    style="@style/MainGameName"
                    android:id="@+id/game3" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/infojuego"
                    android:visibility="invisible"
                    android:id="@+id/info3" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eliminarjuego"
                    android:visibility="invisible"
                    android:id="@+id/delete3"
                    android:onClick="deleteGame" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
